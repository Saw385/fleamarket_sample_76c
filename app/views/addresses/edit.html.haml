
.mypage-main
  .main-content-wrapper
    =render partial: 'users/side-bar'
    .mypage-rightcontent
      =render partial: 'users/user-info-regular'
      .mypage-mainbox
        %section.mainbox-header
          %h2.mainbox-header__text 発送元・お届け先住所変更
          = form_with(model: @address, local: true, class: "address-form",) do |f|
            .profile-address__name
              = f.label "お名前", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.text_field :last_name, class: "input-form-regular", placeholder: '山田'
              = f.text_field :first_name, class: "input-form-regular", placeholder: '太郎'
            .profile-address__name-kana
              = f.label "お名前(カナ)", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.text_field :last_name_kana, class: "input-form-regular", placeholder: 'ヤマダ'
              = f.text_field :first_name_kana, class: "input-form-regular", placeholder: 'タロウ'
            .profile-address__zip-code
              = f.label "郵便番号", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.text_field :zip_code, class: "input-form-regular", placeholder: '1234567'
            .profile-address__prefecture
              = f.label "都道府県", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.select :prefecture, Address.prefectures.keys, {prompt: "選択してください"}, class: 'profile-address__prefecture__select', class: "input-form-regular"
            .profile-address__city
              = f.label "市区町村", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.text_field :city, class: "input-form-regular", placeholder: '渋谷区'
            .profile-address__street-number
              = f.label "番地", class: "profile-form__label"
              %h4.require
                必須
              %br/
              = f.text_field :street_number, class: "input-form-regular", placeholder: '神南1-18-2'
            .profile-address__apartment
              = f.label "建物名", class: "profile-form__label"
              %h4.any
                任意
              %br/
              = f.text_field :apartment, class: "input-form-regular", placeholder: 'アパート名・マンション名'
              = f.label "電話番号", class: "profile-form__label"
              %h4.any
                任意
              %br/
              = f.text_field :telephone, class: "input-form-regular", placeholder: '電話番号'
            .profile-address__submit
              = f.submit "登録する", class: "submit__btn"
= render partial: 'layouts/footer'
= render partial: 'layouts/post-btn'
