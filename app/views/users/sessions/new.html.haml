.wrapper
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .users-registration
      .users-registration__form
        .users-registration__form--title
          ログイン
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field'
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "current-password", class: 'form-field'
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .submit
          = f.submit "Log in", class: 'submit__btn'
        .user-links-btn
          = render "users/shared/links"
