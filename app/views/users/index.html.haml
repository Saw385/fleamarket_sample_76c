.mypage-main
  .main-content-wrapper
    .mypage-side
      .maypage-sidebar
        %ul.mypage-sidebar-lists
          %li.mypage-sider-list
            = link_to "#", class: "mypage-sideber-list__text" do
              %h2.bold
                マイページ
          %li.mypage-sider-list
            = link_to "#", class: "mypage-sideber-list__text" do
              %h2.bold
                いいね
          %li.mypage-sider-list
            = link_to new_product_path, class: "mypage-sideber-list__text" do
              %h2.bold
                出品する
          %li.mypage-sider-list
            = link_to "#", class: "mypage-sideber-list__text" do
              %h2.bold
                購入した商品
        .mypage-nav-head
          設定
        %ul.mypage-nav-list
          %li
            = link_to edit_profile_path(@user), class: "mypage-sideber-list__text" do
              %h2.bold
                プロフィール
          %li
            -if @address == nil 
              = link_to new_address_path, class: "mypage-sideber-list__text" do
                %h2.bold
                  発送元・お届け先住所
            -else
              = link_to edit_address_path(@user), class: "mypage-sideber-list__text" do
                %h2.bold
                  発送元・お届け先住所
          %li
            = link_to "#", class: "mypage-sideber-list__text" do
              %h2.bold
                お支払い方法
          %li
            = link_to "#", class: "mypage-sideber-list__text" do
              %h2.bold
                ログアウト
    .mypage-content
      %section.mypage-user-icon
        = link_to user_path(@user) do
          = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", size: "50x50"
          %p ユーザー名
      %section.mypage-tab-content
        %ul.mypage-tabs
          %li
            = link_to "お知らせ", "#"
          %li
            = link_to "やることリスト", "#"
        .tab-content
          %ul.tab-content-list
            %li
              = link_to "やること１", "#"
            %li
              = link_to "やること２", "#"
            %li
              = link_to "やること３", "#"
            %li
              = link_to "やること４", "#"
      %section.mypage-tab-container
        %h3.mypage-tab-head
          購入した商品
        %ul.mypage-tabs
          %li
            = link_to "取引中", "#"
          %li
            = link_to "売却済み商品", "#"
        .tab-content
          %ul.product-list
            %li
              = link_to "商品１", "#"
            %li
              = link_to "商品２", "#"
